<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_especialidade"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
tools:context="br.com.alexandrebarboza.casadeeventos.EventoServicosActivity"
android:weightSum="1"
android:gravity="center_horizontal"
android:background="@color/light_yellow">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:text="Tipo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_label_evento_servicos_tipo"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/spinner_evento_servicos"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.85"
            android:background="@drawable/edit_default_white"
            android:elevation="6dp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/list_evento_servicos" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/light_yellow">

        <Button
            android:text="Pronto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_evento_servicos_ok"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bt_default_black"
            android:layout_gravity="center" />

        <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_evento_servicos_cancel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bt_default_black"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>
